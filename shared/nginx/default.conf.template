server {
  server_name ${SERVER_NAME};
  listen 80;

  location /api/oauth2/token {
    proxy_pass https://kiosk.auth.us-east-1.amazoncognito.com/oauth2/token;
  }

  location /api/v1/attendence/event {
    proxy_set_header Authorization $http_x_amzn_oidc_accesstoken;
    proxy_pass ${API_URL}/v1/attendence/event;
  }

  location /api/v1/attendence {
    proxy_set_header Authorization $http_x_amzn_oidc_accesstoken;
    proxy_pass ${API_URL}/v1/attendence;
  }

  location /api/v1/check-in {
    proxy_set_header Authorization $http_x_amzn_oidc_accesstoken;
    proxy_pass ${API_URL}/v1/check-in;
  }

  location /api/v1/qr {
    proxy_set_header Authorization $http_x_amzn_oidc_accesstoken;
    proxy_pass ${API_URL}/v1/qr;
  }

  location /api/v1/users {
    proxy_set_header Authorization $http_x_amzn_oidc_accesstoken;
    proxy_pass ${API_URL}/v1/users;
  }

  location /api/v1/room {
    proxy_set_header Authorization $http_x_amzn_oidc_accesstoken;
    proxy_pass ${API_URL}/v1/room;
  }

  location / {
    root   /usr/share/nginx/html;
    index  index.html index.htm;

    # to redirect all the requests to index.html, 
    # useful when you are using react-router

    try_files $uri /index.html; 
  }

  error_page   500 502 503 504  /50x.html;

  location = /50x.html {
    root   /usr/share/nginx/html;
  }
}
